<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">

	<ui:style>
      .app-text-align-center {
		text-align: center;
		}
    </ui:style>

	<b:Container>
		<b:Row>
			<b:Column size="XS_12">

				<b:PageHeader text="Présentation" />

				<b:Panel addStyleNames="{style.app-text-align-center}">
					<b:Heading size="H3">
						<b.html:Text
							text="Cette application est destinée aux développeurs Java." />
					</b:Heading>

					<b:Heading size="H3">

						<b.html:Small
							text="Elle rassemble les javadocs des API les plus courantes et permet une
					recherche simple et rapide des classes, interfaces, annotations." />
					</b:Heading>
				</b:Panel>
				
				<b:Label pull="RIGHT" text="last update 25 septembre 2016" type="WARNING"></b:Label>

			</b:Column>

		</b:Row>
	</b:Container>
</ui:UiBinder>